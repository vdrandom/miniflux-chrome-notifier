{
  "name": "Miniflux Notifier Remixed",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Miniflux Notifier",
  "icons": {
      "16": "img/rss.png",
      "32": "img/rss.png",
      "48": "img/rss.png",
      "64": "img/rss.png",
      "128": "img/rss.png"
  },
  "background": {
      "persistent": true,
      "scripts": ["background.js"]
  },
  "permissions": [
      "contextMenus",
      "notifications", 
      "storage", 
      "alarms"
  ],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
      "default_icon": "img/rss.png",
      "default_title": "Miniflux Notifier Remixed",
      "default_popup": "popup.html"
  }
}
