{
  "name": "Miniflux Notifications Remix",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "Miniflux feed reader Notifications",
  "icons": {
      "16": "img/rss.png",
      "32": "img/rss.png",
      "48": "img/rss.png",
      "64": "img/rss.png",
      "128": "img/rss.png"
  },
  "homepage_url": "https://gitlab.itunix.eu/skorotkiewicz/miniflux-chrome-notifier",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
      "notifications", 
      "storage", 
      "alarms"
  ],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}